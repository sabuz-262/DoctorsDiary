<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Snow"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/addvisitbutton"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginLeft="800dp"
                android:clickable="true"
                android:gravity="right"
                android:background="@drawable/add"
               />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/visitdatespinner"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="335dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext"
                android:inputType="text"
                android:spinnerMode="dialog"
                android:textSize="20dp" >
            </Spinner>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/visitdatatable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Visit Date:"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/patientvisitdate"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/visitdatatable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Visit Number"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/patientvisitnumber"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/visitdatatable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Purpose Of Visit"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/purposevisit"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/visitdatatable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Temperature"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/patienttemperature"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tgraph"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:text="show graph"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/visitdatatable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Blood Pressure:"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:text="High "
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/bloodpressurehigh"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/bgraph"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="2dp"
                            android:clickable="true"
                            android:text="show graph"
                            android:textSize="20dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:text="Low  "
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/bloodpressurelow"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/bplgraph"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="2dp"
                            android:clickable="true"
                            android:text="show graph"
                            android:textSize="20dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/visitdatatable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:visibility="visible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Heart Rate:"
                android:textColor="@color/BLACK"
                android:textSize="20dp" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Max "
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/heartratemax"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />
                        <TextView
                android:id="@+id/hgraph"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:text="show graph"
                android:textSize="20dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Min  "
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/heartratemin"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/BLACK"
                            android:textSize="20dp" />
                        <TextView
                android:id="@+id/hrmingraph"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:text="show graph"
                android:textSize="20dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            
        </TableRow>
    </TableLayout>

</LinearLayout>