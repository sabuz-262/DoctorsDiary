<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  
    android:orientation="vertical"
    android:padding="2dp" >
     
<TableLayout
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         >

         <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
      <Spinner
                android:id="@+id/visitdatespinner"
                android:layout_width="200dp"
                android:background="@color/Snow"
                android:layout_height="40dp"
                android:layout_marginLeft="250dp"  
                android:layout_marginTop="15dp"
                android:spinnerMode="dialog"
                android:inputType="text"
                android:textSize="30sp" >          
            </Spinner>
            
       </TableRow>
        </TableLayout>
      <TableLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
            android:layout_height="wrap_content" >
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
               <TextView
                    android:layout_marginLeft="120dp"
                    android:text="Glucose" 
                    android:layout_width="150dp"
                    android:textColor="@color/BLACK"     
                    android:layout_height="40dp"
                    android:textSize="25dp"
                    
                    />
        
        <TextView
            android:id="@+id/glucosetext"
             android:layout_marginLeft="85dp"
	         android:layout_width="70dp"
	         android:layout_height="50dp"
	        
	           android:textSize="20dp"
            
            />       
            
        <TextView
            android:id="@+id/glucosegraph"
             android:layout_marginLeft="10dp"
	         android:layout_width="120dp"
	         android:layout_height="50dp"
	         android:text="show graph"
	           android:textSize="20dp"
	           android:clickable="true"></TextView>
      </TableRow>  
       
    </TableLayout>

     <TableLayout
        android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
               <TextView
                    android:layout_marginLeft="120dp"
                    android:text="Red Blood Cells" 
                    android:layout_width="180dp"
                    android:textColor="@color/BLACK"     
                    android:layout_height="40dp"
                    android:textSize="25dp"
                    
                    />
        
        <TextView
            android:id="@+id/rbctext"
             android:layout_marginLeft="60dp"
	         android:layout_width="70dp"
	         android:layout_height="50dp"
	         
	           android:textSize="20dp"
            
            />   
            
        <TextView
            android:id="@+id/rbcgraph"
             android:layout_marginLeft="10dp"
	         android:layout_width="120dp"
	         android:layout_height="50dp"
	         android:text="show graph"
	           android:textSize="20dp"
	           android:clickable="true"></TextView>
      </TableRow>  
       
    </TableLayout>
      <TableLayout
        android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
               <TextView
                    android:layout_marginLeft="120dp"
                    android:text="White Blood Cells" 
                    android:layout_width="220dp"
                    android:textColor="@color/BLACK"     
                    android:layout_height="70dp"
                    android:textSize="25dp"
                    
                    />
        
        <TextView
            android:id="@+id/uwbctext"
             android:layout_marginLeft="20dp"
	         android:layout_width="70dp"
	         android:layout_height="50dp"
	      
