<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Snow"
    android:orientation="vertical"
    android:padding="2dp" >

    
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >
   

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textSize="20dp" />

            <AutoCompleteTextView
                android:id="@+id/medicinenamespinner"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:textSize="20dp" />
        </TableRow>
    
       
    </TableLayout>
     <TableLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_height="wrap_content" >

       

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Time"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/medicinetimespinner"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:spinnerMode="dialog"
                android:textSize="30dp" />
        </TableRow>
        
       
    </TableLayout>
     <TableLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_height="wrap_content" >
   
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="How Long"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/howlongspinner"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:spinnerMode="dialog"
                android:textSize="30dp" />

            <Button
                android:id="@+id/addmedicinebutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/addvisit"
                android:textColor="@color/WHITE"
                android:textColorHighlight="@color/WHITE"
                android:textSize="15dp" />
        </TableRow>
       
    </TableLayout>


       
        
        
    

     <TableLayout
            android:id="@+id/medicinetable"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginLeft="380dp"
            android:layout_marginTop="15dp"
            android:background="@color/WHITE" >
        </TableLayout>

</LinearLayout>