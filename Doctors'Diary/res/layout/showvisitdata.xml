<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/Snow"
    android:orientation="vertical" >
    
    
    <TableLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:visibility="visible"
        android:gravity="center" >

       
         <TableRow
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    
           <TextView
                    
                    android:text="Visit Data" 
                    android:layout_width="400dp"
                    android:layout_marginLeft="350dp"
                    android:textColor="@color/MediumBlue"     
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
           
           <TextView
                android:id="@+id/addvisit"
                android:clickable="true"
                android:gravity="right"
               
                android:text="Add Visit"
                android:textColorLink="@android:color/black"
                android:textSize="25dp"
                android:textStyle="bold" />
             </TableRow>

         </TableLayout>
    
    
    
    <TableLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:visibility="visible"
        android:gravity="center" >

       
         <TableRow
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    
     <Spinner
                android:id="@+id/visitdatespinner"
                android:layout_width="200dp"
                android:background="@color/WHITE"
                android:layout_height="40dp"
                android:layout_marginLeft="335dp"  
                android:layout_marginTop="25dp"
                android:spinnerMode="dialog"
                android:inputType="text"
                android:textSize="20dp" >          
            </Spinner>
             </TableRow>

         </TableLayout>

             <TableLayout
                 android:id="@+id/visitdatatable"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="100dp"
                 android:gravity="center"
                 android:visibility="visible" >

                 <TableRow
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >

                     <TextView
                         android:layout_width="200dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="25dp"
                         android:text="Visit Date:"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />

                     <TextView
                         android:id="@+id/showpatientvisitdate"
                         android:layout_width="200dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="25dp"
                         android:text="29-Jun-2012"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />
                 </TableRow>

                 <TableRow
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >

                     <TextView
                         android:layout_width="200dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="15dp"
                         android:text="Visit Number"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />

                     <TextView
                         android:id="@+id/showpatientvisitnumber"
                         android:layout_width="200dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="15dp"
                         android:text="3"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />
                 </TableRow>

                 <TableRow
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >

                     <TextView
                         android:layout_width="200dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="15dp"
                         android:text="Temperature"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />

                     <TextView
                         android:id="@+id/showpatienttemperature"
                         android:layout_width="200dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="15dp"
                         android:text="98F"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />
                 </TableRow>

                 <TableRow
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >

                     <TextView
                         android:layout_width="200dp"
                         android:layout_height="100dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="25dp"
                         android:text="Blood Pressure:"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />

                     <LinearLayout
                         xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical" >

                         <TableLayout
                             android:id="@+id/tableLayout1"
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:gravity="center" >

                             <TableRow
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content" >

                                 <TextView
                                     android:layout_width="100dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="5dp"
                                     android:text="High "
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />

                                 <TextView
                                     android:id="@+id/bloodpressurehigh"
                                     android:layout_width="200dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="5dp"
                                     android:text="165bp "
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />
                             </TableRow>

                             <TableRow
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content" >

                                 <TextView
                                     android:layout_width="100dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="5dp"
                                     android:text="Low  "
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />

                                 <TextView
                                     android:id="@+id/bloodpressurelow"
                                     android:layout_width="200dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="5dp"
                                     android:text="85bp"
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />
                             </TableRow>
                         </TableLayout>
                     </LinearLayout>
                 </TableRow>

                 <TableRow
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >

                     <TextView
                         android:layout_width="200dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="25dp"
                         android:text="Heart Rate:"
                         android:textColor="@color/BLACK"
                         android:textSize="20dp" />

                     <LinearLayout
                         xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical" >

                         <TableLayout
                             android:id="@+id/tableLayout1"
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:gravity="center" >

                             <TableRow
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content" >

                                 <TextView
                                     android:layout_width="100dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="25dp"
                                     android:text="Max "
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />

                                 <TextView
                                     android:id="@+id/hearratemax"
                                     android:layout_width="200dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="25dp"
                                     android:text="36BPM"
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />
                             </TableRow>

                             <TableRow
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content" >

                                 <TextView
                                     android:layout_width="100dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="25dp"
                                     android:text="Min  "
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />

                                 <TextView
                                     android:id="@+id/heartratemin"
                                     android:layout_width="200dp"
                                     android:layout_height="50dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginTop="25dp"
                                     android:text="34BPM "
                                     android:textColor="@color/BLACK"
                                     android:textSize="20dp" />
                             </TableRow>
                         </TableLayout>
                     </LinearLayout>
                 </TableRow>
             </TableLayout>
       

</LinearLayout>